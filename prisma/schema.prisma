model Course {
  id              Int            @id @default(autoincrement())
  name            String
  fee             String
  description     String
  host_details    Users          @relation(fields: [host], references: [id])
  host            Int            @unique
  max_paticipants Int
  imgages         String[]
  video           String?
  hosted          Boolean        @default(false)
  Classes         Classes[]
  Structure       Structure[]
  Vid_Classes     Vid_Classes[]
  Methodology     Methodology[]
  Content         Content[]
  Participants    Participants[]
  Gift            Gift?
  Suggest         Suggest?
}

model Classes {
  id          Int     @id @default(autoincrement())
  name        String
  date        String
  duration    String
  time        String
  description String
  link        String
  course      Course  @relation(fields: [course_id], references: [id])
  course_id   Int     @unique
  fee         String?
}

model Structure {
  id        Int    @id @default(autoincrement())
  name      String
  course    Course @relation(fields: [course_id], references: [id])
  course_id Int
}

model Vid_Classes {
  id        Int    @id @default(autoincrement())
  name      String
  course    Course @relation(fields: [course_id], references: [id])
  course_id Int
}

model Methodology {
  id        Int    @id @default(autoincrement())
  name      String
  course    Course @relation(fields: [course_id], references: [id])
  course_id Int
}

model Content {
  id        Int    @id @default(autoincrement())
  name      String
  course    Course @relation(fields: [course_id], references: [id])
  course_id Int
}

model Participants {
  id             Int    @id @default(autoincrement())
  course         Course @relation(fields: [course_id], references: [id])
  course_id      Int
  participant    Users  @relation(fields: [participant_id], references: [id])
  participant_id Int    @unique
}

model Gift {
  id        Int    @id @default(autoincrement())
  gifted    Users  @relation(fields: [email_id], references: [email])
  email_id  String @unique
  course    Course @relation(fields: [course_id], references: [id])
  course_id Int    @unique
}

model Suggest {
  id        Int    @id @default(autoincrement())
  suggested Users  @relation(fields: [email_id], references: [email])
  email_id  String @unique
  course    Course @relation(fields: [course_id], references: [id])
  course_id Int    @unique
}
